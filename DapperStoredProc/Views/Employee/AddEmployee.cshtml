@model DapperStoredProc.Models.Employee

@{
    Layout = null;
}

    <h1>Add Employee</h1>

    <form action="@Url.Content("/Employee/AddEmployee")" id="myform" method="post">


        <input type="hidden" asp-for="EmpId" />
        <div class="row">
            <div class="col-lg-12">
                <div class="form-group">
                    <label asp-for="EmployeeName" class="control-label"></label>
                    <input asp-for="EmployeeName" class="form-control" />
                    <label id="EmployeeName-error" class="error" for="EmployeeName" style="display:none"></label>
                </div>
            </div>
        </div>
        @Html.DropDownListFor(x => x.Designation, new SelectList(Enum.GetValues(typeof(Designation))), "Select Designation")
        <br/>
        <br/>
        @Html.DropDownListFor(x => x.Department, new SelectList(Enum.GetValues(typeof(Department))), "Select Department")
        
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-primary" id="add" style="background-color:darkgreen;">Submit</button>
        </div>


    </form>

<script>validateEmpForm()</script>
