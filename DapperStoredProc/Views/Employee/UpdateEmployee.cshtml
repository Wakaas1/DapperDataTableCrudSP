@model DapperStoredProc.Models.Employee

@{
    Layout = null;
}

<h1>UpdateEmployee</h1>

        <form action="@Url.Content("/Employee/UpdateEmployee")" id="myform" method="post">


            <input type="hidden" asp-for="EmpId" />
            <div class="row">
                <div class="col-lg-12">
                    <div class="form-group">
                        <label asp-for="EmployeeName" class="control-label"></label>
                        <input asp-for="EmployeeName" class="form-control" />
                        <label id="EmployeeName-error" class="error" for="EmployeeName" style="display:none"></label>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="form-group">
                        <label asp-for="Designation" class="control-label"></label>
                        <input asp-for="Designation" class="form-control" />
                        <label id="Designation-error" class="error" for="Designation" style="display:none"></label>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="form-group">
                        <label asp-for="Department" class="control-label"></label>
                        <input asp-for="Department" class="form-control" />
                        <label id="Department-error" class="error" for="Department" style="display:none"></label>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-primary" id="edit" style="background-color:darkgreen;">Submit</button>
            </div>

        </form>
<script>validateEmpForm()</script>
