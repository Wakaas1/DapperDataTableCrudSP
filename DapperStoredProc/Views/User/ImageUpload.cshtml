@model DapperStoredProc.DTO.ImageUpload

@{
    ViewData["Title"] = "ImageUpload";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ImageUpload</title>
</head>
<body>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="ImageUpload" asp-controller="User" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    
                    <input type="file" name="postedFiles" multiple />

                    <br />
                    <span style="color:green">@Html.Raw(ViewBag.Message)</span>
                </div>
                <div class="form-group">
                    <input type="submit" value="ImageUpload" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</body>
</html>
<div>
    <a asp-action="Index">Back to List</a>
</div>


